<h2 class="title">Listing expiring papers</h2>

<div class="container-fluid">
  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>Owner</th>
      <th>Description</th>
      <th>Expire</th>
      <th>Coments</th>
    </tr>
    </thead>

    <tbody>
    <% @papers.each do |paper| %>
        <tr <%= raw expire_row(paper.expire) %> >
          <td><%= paper.document_type == "Truck" ? paper.document.registration : paper.document.name %></td>
          <td><%= paper.description %></td>
          <td><%= paper.expire %></td>
          <td><%= paper.comments %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>