<%= simple_form_for @credit_invoice, :html => { class: 'form-horizontal' } do |f| %>
  <%= f.input :number %>
  <%= f.input :date %>
  <%= f.input :net_value %>
  <%= f.input :tax_value %>
  <%= f.input :total_value %>
  <%= f.input :currency, collection: CreditInvoice::CURRENCY, :as => :radio_buttons, :item_wrapper_class => 'inline' %>
  <%= f.input :comment %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to "Cancel", debit_invoices_path, class: "btn btn-danger"%>
<% end %>