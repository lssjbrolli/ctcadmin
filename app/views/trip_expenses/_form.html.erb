<%= simple_form_for @trip_expense, :html => {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :int_id, label: 'Internal ID' %>
    <%= f.input :number %>
    <%= f.input :date, as: :string, input_html: {data: {behaviour: 'datepicker'}} %>
    <%= f.input :value %>
    <%= f.input :currency, collection: TripExpense::CURRENCY, :item_wrapper_class => 'inline' %>
    <%= f.input :value_eur %>
    <%= f.input :card %>
    <%= f.input :description, collection: TripExpense::DESCRIPTION, :item_wrapper_class => 'inline' %>
    <%= f.input :file, :label => 'Select invoice file' %>
    <%= f.hidden_field :file_cache %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', trip_expenses_path, class: 'btn btn-danger' %>
<% end %>