<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th style="width: 30%;">Paper</th>
    <th style="width: 10%;">Expire</th>
    <th style="width: 40%; text-align: center;">Comments</th>
    <th style="width: 20%;"></th>
  </tr>
  </thead>
  <tbody>
  <% unless papers.nil? %>
      <% papers.each do |p| %>
          <tr <%= raw expire_row(p.expire) %> >
            <td><%= p.description %></td>
            <td><%= p.expire %></td>
            <td class="td.t_center"><%= p.comments %></td>
            <td class="btn-group btn-group-xm">
              <%= file_state(p, 'Show') %>
              <%= link_to 'Edit', path_info(model_path, 'edit', p), {:remote => true, data: {toggle: 'modal', target: '#modal'}, class: 'btn btn-info'} %>
              <%= link_to 'Destroy', path_info(model_path, 'destroy', p), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
            </td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>