<div class="container">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <p style="text-align: center">
    <strong>Registration:</strong> <%= link_to @truck.registration, edit_truck_path(@truck), {:remote => true, data: { toggle: 'modal', target: 'modal', backdrop: 'static'}} %>
    (VIN: <%= @truck.vin %>)
  </p>

  <p style="text-align: center">
    View <%= link_to 'Credit Notes', cnotes_path(@truck) %> or <%= link_to 'Events', truck_events_path(@truck) %>.
  </p>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th style="width: 30%;">Paper</th>
      <th style="width: 10%;">Expire</th>
      <th style="width: 40%; text-align: center;">Comments</th>
      <th style="width: 20%;"></th>
    </tr>
    </thead>
    <tbody>
    <% unless @papers.nil? %>
        <% @papers.each do |p| %>
            <tr <%= raw expire_row(p.expire) %> >
              <td><%= p.description %></td>
              <td><%= p.expire %></td>
              <td class="td.t_center"><%= p.comments %></td>
              <td class="btn-group btn-group-xs">
                <%= file_state(p, 'Show') %>
                <%= link_to 'Edit', edit_truck_paper_path(p.document, p), {:remote => true, data: {toggle: 'modal', target: '#modal'}, class: 'btn btn-info'} %>
                <%= link_to 'Destroy', truck_paper_path(p.document, p), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
              </td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Add paper', new_truck_paper_path(@truck), {:remote => true, data: {toggle: 'modal', target: '#modal', backdrop: 'static'}, class: 'btn btn-primary'} %>
  <%= will_paginate @papers, renderer: BootstrapPagination::Rails %>
</div>
<div id="modal" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>