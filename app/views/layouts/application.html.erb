<!DOCTYPE html>
<html>

<head>
  <title>Cozma Transport 2005 SRL</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <div class="navbar">
    <div class="navbar-inner">
      <%= link_to 'CTCAdmin', trucks_path, class: 'brand' %>
      <ul class="nav pull-right" role="navigation">
        <% if signed_in? %>
            <li><%= link_to 'Trucks', trucks_path %></li>
            <li><%= link_to 'Credit notes', credit_notes_path %></li>
            <li><%= link_to 'Credit invoices', credit_invoices_path %></li>
            <li class="dropdown">
              <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                Expenses
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <li>
                    <%= link_to 'Trip Expenses', trip_expenses_path, role: 'menuitem', tabindex: '-1' %>
                </li>
                <li>
                    <%= link_to 'National Expenses', national_expenses_path, role: 'menuitem', tabindex: '-1' %>
                </li>
                <li>
                    <%= link_to 'Expenses', expenses_path, role: 'menuitem', tabindex: '-1' %>
                </li>
                <li>
               </ul>
            </li>
            <li><%= link_to 'Companies', companies_path %></li>
                <% if @current_user.admin? %>
                    <li><%= link_to 'Users', users_path %></li>
                <% end %>
            <li class="divider-vertical"></li>
            <li id="li_search">
              <form class="form-search">
                <input type="text" class="input-small search-query" placeholder="Search">
              </form>
            </li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Logged in as #{fullname(@current_user)}", user_path(@current_user) %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to 'Sign Out', signout_path, method: 'delete' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</head>

<body>
<%= yield %>
</body>
</html>
