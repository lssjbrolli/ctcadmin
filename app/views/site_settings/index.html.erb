<h2 class="title">Listing Site Settings</h2>
<div class="container-fluid">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <table class="table table-hover table-condensed">
    <tbody>
    	<tr>
    		<td>Diurna baza</td><td><%= best_in_place SiteSettings.diurna_baza, :value %></td>
    	</tr>
    	<tr>
    		<td>Activities</td><td><%= best_in_place SiteSettings.activities, :value %></td>
    	</tr>
    	<tr>
    		<td>Vat Rate</td><td><%= best_in_place SiteSettings.vat_rate, :value %></td>
    	</tr>
    	<tr>
    		<td>Currencies</td><td><%= best_in_place SiteSettings.currencies, :value %></td>
    	</tr>
    	<tr>
    		<td>Paid by</td><td><%= best_in_place SiteSettings.paid_by, :value %></td>
    	</tr>
    </tbody>
  </table>

</div>