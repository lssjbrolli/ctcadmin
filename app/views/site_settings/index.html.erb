<h2 class="title">Listing Site Settings</h2>
<div class="container-fluid">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>Setting</th>
      <th>Value</th>
    </tr>
    </thead>

    <tbody>
    <% @settings.each do |set| %>
        <tr>
          <td><%= set.var %></td>
          <td><%= set.value %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>