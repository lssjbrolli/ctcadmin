<%= simple_form_for @extern_expense, html: {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :number %>
    <%= f.input :date, as: :string, input_html: {data: {behaviour: 'datepicker'}} %>
    <%= f.input :value %>
    <%= f.input :currency %>
    <%= f.association :supplier %>
    <%= f.input :description, collection: ExternExpense::DESCRIPTION, :item_wrapper_class => 'inline' %>
    <%= f.input :file, :label => 'Select raport file' %>
    <%= f.hidden_field :file_cache %>
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to 'Cancel', extern_expenses_path, class: 'btn btn-danger' %>
<% end %>