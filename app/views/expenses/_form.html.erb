<%= simple_form_for @expense, :html => { class: 'form-horizontal' } do |f| %>
  <%= f.input :number %>
  <%= f.input :date %>
  <%= f.input :value %>
  <%= f.input :currency, collection: Expense::CURRENCY, :as => :radio_buttons, :item_wrapper_class => 'inline' %>
  <%= f.association :supplier %>
  <%= f.input :card %>
  <%= f.input :comment %>
  <%= f.input :file, :label => "Select invoice file" %>
  <%= f.hidden_field :file_cache %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to "Cancel", expenses_path, class: "btn btn-danger"%>
<% end %>