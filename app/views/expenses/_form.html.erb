<%= simple_form_for @expense, :html => {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :number%>
    <%= f.input :date, as: :string, input_html: {data: {behaviour: 'datepicker'}}  %>
    <%= f.input :description %>
    <%= f.input :value %>
    <%= f.input :currency %>
    <%= f.input :value_ron %>
    <%= f.input :file, :label => 'Select raport file' %>
    <%= f.hidden_field :file_cache %>
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to 'Cancel', expenses_path, class: 'btn btn-danger' %>
<% end %>