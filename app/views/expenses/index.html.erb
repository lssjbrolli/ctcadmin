<div class="container">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <h1>Listing Expenses</h1>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>Invoice Number</th>
      <th class="t_middle">Date</th>
      <th class="t_middle">Description</th>
      <th class="t_right">Value</th>
      <th class="t_right">RON Value</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @p_expenses.each do |e| %>
        <tr>
          <td><%= e.number %></td>
          <td class="t_middle"><%= e.date %></td>
          <td class="t_middle"><%= e.description %></td>
          <td class="t_value"><%= number_to_currency(e.value, :unit => e.currency) %></td>
          <td class="t_value"><%= number_to_currency(e.value_eur, :unit => 'EUR') %></td>
          <td class="btn-group btn-group-xs">
            <%= file_state(e, 'Show') %>
            <%= link_to 'Edit', edit_expense_path(e), class: 'btn btn-info' %>
            <%= link_to 'Destroy', e, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= will_paginate @p_expenses, renderer: BootstrapPagination::Rails %>

  <div class="btn-group btn-group-xs">
    <%= link_to 'New Expense', new_expense_path, class: 'btn btn-primary' %>
  </div>
</div>