<div class="container">
  <% if notice %> 
    <%= notice %>
  <% end %>

  <h1>Listing <%= @truck.registration %> Credit Notes</h1>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Order nr</th>
        <th>Number</th>
        <th>Start</th>
        <th>Stop</th>
        <th>Week</th>
        <th style="text-align: right">Value</th>
        <th>Currency</th>
        <th>Paid</th>
        <th>Notes</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cn.each do |cn| %>
        <tr>
          <td><%= best_in_place cn, :order_nr %></td>
          <td><%= cn.number %></td>
          <td><%= cn.start %></td>
          <td><%= cn.stop %></td>
          <td><%= cn.week %></td>
          <td style="text-align: right"><%= "%0.2f" % cn.value %></td>
          <td><%= cn.currency %></td>
          <td><%= cn.paid %></td>
          <td><%= cn.notes %></td> 
          <td class="btn-group btn-group-xs">
            <%= link_to 'Show', cn.file_url, class: "btn btn-info" %>
            <%= link_to 'Edit', edit_credit_note_path(cn), class: "btn btn-info" %>
            <%= link_to 'Destroy', cn, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= will_paginate @cn, renderer: BootstrapPagination::Rails %>
</div>