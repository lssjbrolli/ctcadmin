<h2 class="title">Listing companies</h2>
<div class="container-fluid">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <th>VAT id</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Contact</th>
      <th><%= render 'search' %></th>
    </tr>
    </thead>

    <tbody>
    <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= company.vat %></td>
          <td><%= company.phone %></td>
          <td><%= company.email %></td>
          <td><%= company.contact %></td>
          <td class="btn-group btn-group-xm">
            <%= link_to 'Show', company, {:remote => true, data: {toggle: 'modal', target: '#modal'}, class: 'btn btn-info'} %>
            <%= link_to 'Edit', edit_company_path(company), class: 'btn btn-info' %>
            <%= link_to 'Destroy', company, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <div class="button-container">
    <%= link_to 'New Company', new_company_path, {:remote => true, data: {toggle: 'modal', target: '#modal', backdrop: 'static'}, class: 'btn btn-primary'} %>
  </div>
  <div class="button-container">
    <%= will_paginate @companies, renderer: BootstrapPagination::Rails %>
  </div>

</div>

<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>