<div class="container">
  <h1>Listing companies</h1>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td class="btn-group btn-group-xs">
            <%= link_to 'Show', company, class: "btn btn-info" %>
            <%= link_to 'Edit', edit_company_path(company), class: "btn btn-info" %>
            <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Company', new_company_path, class: "btn btn-info" %>
</div>