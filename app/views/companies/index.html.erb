<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td>
          <%= minor_button_group do %>
            <%= small_pill_button_link_to 'Show', company %>
            <%= small_pill_edit_button_link_to 'Edit', edit_company_path(company) %>
            <%= small_pill_remove_danger_button_link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= add_small_pill_button_link_to 'New Company', new_company_path %>
