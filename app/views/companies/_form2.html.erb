<%= simple_form_for @company, :html => {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :registration %>
    <%= f.input :vat %>
    <%= f.input :address %>
    <%= f.input :acc_lei %>
    <%= f.input :acc_eur %>
    <%= f.input :bank %>
    <%= f.input :capital %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :contact %>
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Back', companies_path, class: 'btn btn-danger' %>
<% end %>
