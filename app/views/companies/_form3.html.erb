<%= bootstrap_form_for(@company, layout: :inline, label_col: 'col-sm-3', control_col: 'col-sm-7') do |f| %>
    <%= f.country_select :country, {selected: 'RO', only: eu_countries_list}, class: 'form-control' %>
    <%= f.number_field :vat, hide_label: true, placeholder: 'VAT number' %>
    <div class="modal-footer">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
      <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
<% end %>