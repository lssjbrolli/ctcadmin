<div class="container">
	<h1>Sign up</h1>
	<%= simple_form_for @user, :html => { class: 'form-horizontal' } do |f| %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :cnp %>
		<%= f.input :language, collection: ["English", "Romana"] %>
		<%= f.input :username %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
	<% end %>
</div>