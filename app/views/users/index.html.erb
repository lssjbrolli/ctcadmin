<div class="container">

  <% if notice %> 
    <div class="alert alert-success">
      <%= notice %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
  
  <h1>Listing companies</h1>
  
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= fullname(user) %></td>
          <td><p class="btn btn-primary" data-toggle="button">activated</p></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Company', new_company_path, class: "btn btn-info" %>
  
</div>