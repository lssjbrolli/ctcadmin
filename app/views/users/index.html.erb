<div class="container">

  <% if flash %>
    <% flash.each do |k,v| %>
      <%= alert(k,v) %>
    <% end %>
  <% end %>
  
  <h1>Listing users</h1>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= fullname user %></td>
          <td><%= best_in_place user, :activated, type: :checkbox, collection: ["Desactivated", "Activated"], classes: [ act_toggle(user), "act_button"] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>