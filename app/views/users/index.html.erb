<div class="container">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <h1>Listing users</h1>
  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th id="table_width">Name</th>
      <th class="t_center">Status</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= fullname user %></td>
          <td class="btn-group">
            <%= best_in_place user, :activated, type: :checkbox, collection: %w(Inactiv Activ), classes: [act_toggle(user), 'act_button'] %>
            <%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger act_button' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>