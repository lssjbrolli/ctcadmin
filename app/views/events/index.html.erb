<div class="container">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <h1>Listing events</h1>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>Date</th>
      <th>Km</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @events.each do |event| %>
        <tr>
          <td><%= event.date %></td>
          <td><%= event.km %></td>
          <td><%= event.comment %></td>
          <td class="btn-group btn-group-xs">
            <%= link_to 'Edit', edit_truck_event_path(event.truck, event), class: 'btn btn-info' %>
            <%= link_to 'Destroy', truck_event_path(event.truck, event), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_truck_event_path(@truck), class: 'btn btn-primary' %>
</div>