<div class="container">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <h2>Listing events</h2>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th style="width: 10%;">Date</th>
      <th style="width: 10%;">Km</th>
      <th style="width: 50%; text-align: center;">Comment</th>
      <th style="width: 30%;"></th>
    </tr>
    </thead>

    <tbody>
    <% @events.each do |event| %>
        <tr>
          <td><%= event.date %></td>
          <td><%= event.km %></td>
          <td><%= event.comment %></td>
          <td class="btn-group btn-group-xs">
            <%= link_to 'Edit', edit_truck_event_path(event.truck, event),  {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal', 'data-backdrop' => 'static', class: "btn btn-info"}  %>
            <%= link_to 'Destroy', truck_event_path(event.truck, event), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add event', new_truck_event_path(@truck), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal', 'data-backdrop' => 'static', 'data-header' => 'Add new event...', class: "btn btn-primary"} %>

  <%= will_paginate @events, renderer: BootstrapPagination::Rails %>

</div>

<div id="modal" class="modal hide fade" role="dialog" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true"></div>