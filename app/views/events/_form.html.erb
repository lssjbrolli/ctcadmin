<%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :date, as: :string, input_html: {data: {behaviour: 'datepicker'}} %>
      <%= f.input :km %>
      <%= f.input :comment %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
