<%= simple_form_for @employee, :html => {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :cnp %>
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Back', employees_path, class: 'btn btn-danger' %>
<% end %>
