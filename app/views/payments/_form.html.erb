<%= simple_nested_form_for [@employee, @payment], :html => {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :sron, input_html: { value: 777 } %>
    <%= f.input :month, as: :string, input_html: {data: {behaviour: 'monthpicker'}, value: (Time.now - 1.month).strftime("%B %Y")}, discard_day: true %>
    <%= f.input :diurna %>
    <%= f.input :days, placeholder: 'Only if less than full month' %>
    <%= f.input :avans %>
    <%= f.simple_fields_for :bonuses do |b| %>
	    <%= b.input_field :value, label: false, placeholder: 'Bonus value' %>
	    <%= b.input_field :comment, label: false, placeholder: 'Comments' %>
		<%= b.link_to_remove '', class: 'icon-remove' %>
	<% end %>
	<%= f.link_to_add "Add a bonus", :bonuses, class: 'btn btn-info' %>
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Back', employee_payments_path(@employee), class: 'btn btn-danger' %>
<% end %>
