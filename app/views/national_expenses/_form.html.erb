<%= simple_form_for @national_expense, :html => {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :number %>
    <%= f.input :date, as: :string, input_html: {data: {behaviour: 'datepicker'}} %>
    <%= f.input :value %>
    <%= f.association :supplier %>
    <%= f.input :description, collection: NationalExpense::DESCRIPTION, :item_wrapper_class => 'inline' %>
    <%= f.input :paid_by, collection: NationalExpense::PAID_BY, :item_wrapper_class => 'inline' %>
    <%= f.input :file, :label => 'Select invoice file' %>
    <%= f.hidden_field :file_cache %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', national_expenses_path, class: 'btn btn-danger' %>
<% end %>