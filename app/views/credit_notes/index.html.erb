<div class="container">
  <% if notice %> 
    <%= notice %>
  <% end %>

  <h1>Listing Credit Notes</h1>
  <p><%= session[:sega] %></p>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Number</th>
        <th>Start</th>
        <th>Stop</th>
        <th>Week</th>
        <th style="text-align: right">Value</th>
        <th>Currency</th>
        <th>Paid</th>
        <th>Truck</th>
        <th>File</th>
        <th>Notes</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cnotes.each do |cn| %>
        <tr>
          <td><%= cn.number %></td>
          <td><%= cn.start %></td>
          <td><%= cn.stop %></td>
          <td><%= cn.week %></td>
          <td style="text-align: right"><%= "%0.2f" % cn.value %></td>
          <td><%= cn.currency %></td>
          <td><%=raw paid(cn) %></td>
          <td><%= truck(cn) %></td>
          <td><%=raw file_uploaded(cn) %></td>
          <td><%= cn.notes %></td> 
          <td class="btn-group btn-group-xs">
            <%= link_to 'Show', cn.file_url, class: "btn btn-info" %>
            <%= link_to 'Edit', edit_credit_note_path(cn), class: "btn btn-info" %>
            <%= link_to 'Destroy', cn, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @cnotes, renderer: BootstrapPagination::Rails %>

  <%= link_to 'New Credit note', new_credit_note_path, class: "btn btn-primary" %>
</div>