
  <%= simple_form_for @credit_note, :html => { class: 'form-horizontal' } do |f| %>
    <%= f.input :number, :label => "Credit note number", :input_html => { :class => "span6" } %>
    <%= f.input :value, :label => "Value of trip" %>
    <%= f.input :start, :label => "Trip start location" %>
    <%= f.input :stop, :label => "Trip finish location" %>
    <%= f.input :week %>
    <%= f.input :notes %>
    <%= f.input :currency, collection: CreditNote::CURRENCY, as: :radio_buttons, :item_wrapper_class => 'inline' %>
    <%= f.association :truck,:label_method => :registration %>
    <%= f.input :paid %>
    <%= f.input :file, :label => "Select raport file" %>
    <%= f.hidden_field :file_cache %>
    <%= f.button :submit, class: 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  <% end %>