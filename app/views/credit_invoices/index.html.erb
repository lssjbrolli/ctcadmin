<div class="container">
  
  <% if flash %>
    <% flash.each do |k,v| %>
      <%= alert(k,v) %>
    <% end %>
  <% end %>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Number</th>
        <th>Date</th>
        <th>Value</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @credit_invoices.each do |ci| %>
        <tr>
          <td><%= ci.number %></td>
          <td><%= ci.date %></td>
          <td><%= "%0.2f" % ci.total_value %></td>
          <td class="btn-group btn-group-xs">
            <%= link_to 'Show', credit_invoice_path(ci, format: "pdf"), class: "btn btn-info" %>
            <%= link_to 'Edit', edit_credit_invoice_path(ci), class: "btn btn-info" %>
            <%= link_to 'Destroy', ci, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= will_paginate @cinvoices, renderer: BootstrapPagination::Rails %>

  <%= link_to 'New Credit invoice', new_credit_invoice_path, class: "btn btn-primary" %>
</div>