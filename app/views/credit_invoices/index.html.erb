<% if notice %> 
  <div data-alert class="alert-box.success">
    <%= notice %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Date</th>
      <th>Value</th>
    </tr>
  </thead>

  <tbody>
    <% @credit_invoices.each do |ci| %>
      <tr>
        <td><%= ci.number %></td>
        <td><%= ci.date %></td>
        <td><%= ci.value %></td>
        <td><%= link_to 'Show', ci, class: "button tiny radius success" %></td>
        <td><%= link_to 'Edit', edit_credit_invoice_path(ci), class: "button tiny radius success" %></td>
        <td><%= link_to 'Destroy', ci, method: :delete, data: { confirm: 'Are you sure?', class: "button tiny radius alert" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit invoice', new_credit_invoice_path, class: "button small round" %>
