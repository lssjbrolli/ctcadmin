<div class="container">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <h2>Listing Credit Notes</h2>
  
  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th style='width: 25%;'><%= sortable 'number' %></th>
      <th style='width: 25%;' class="t_middle">Date</th>
      <th style='width: 25%;' class="t_right"><%= sortable 'total_value', 'Value' %></th>
      <th style='width: 25%;'><%= render 'search/search' %></th>
    </tr>
    </thead>

    <tbody>
    <% @cinvoices.each do |ci| %>
        <tr>
          <td><%= ci.number %></td>
          <td class="t_middle"><%= ci.date %></td>
          <td class="t_value"><%= number_to_currency(ci.total_value, :unit => ci.currency) %></td>
          <td class="btn-group btn-group-xs">
            <%= file_state(ci, 'Show') %>
            <%= link_to 'Edit', edit_credit_invoice_path(ci), class: 'btn btn-info' %>
            <%= link_to 'Destroy', ci, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= will_paginate @cinvoices, renderer: BootstrapPagination::Rails %>

  <%= link_to 'New Credit invoice', new_credit_invoice_path, class: 'btn btn-primary' %>
</div>