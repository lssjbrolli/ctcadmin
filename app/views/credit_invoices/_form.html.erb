<%= simple_form_for @credit_invoice do |f| %>
  <%= f.input :number %>
  <%= f.input :date %>
  <%= f.association :seller %>
  <%= f.association :buyer %>
  <%= f.association :credit_notes, as: :check_boxes, :collection => @cnotes, :label_method => :number, :value_method => :id %>
  <%= f.select :currency, CreditInvoice::CURRENCY  %>
  <%= f.select :tax_rate, CreditInvoice::VAT_RATE  %>
  <%= f.input :delegat %>
  <%= f.input :ci %>
  <%= f.input :eliberat %>
  <%= f.input :transport %>
  <%= f.button :submit %>
<% end %>