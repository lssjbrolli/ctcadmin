<%= simple_form_for @cash_expense, :html => {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.input :number %>
    <%= f.input :date, as: :string, input_html: {data: {behaviour: 'datepicker'}} %>
    <%= f.input :value %>
    <%= f.input :currency, collection: CardExpense::CURRENCY, :item_wrapper_class => 'inline' %>
    <%= f.input :description %>
    <%= f.input :file, :label => 'Select invoice file' %>
    <%= f.hidden_field :file_cache %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', card_expenses_path, class: 'btn btn-danger' %>
<% end %>