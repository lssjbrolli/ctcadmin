<div class="container">

  <% if flash %>
      <% flash.each do |k, v| %>
          <%= alert(k, v) %>
      <% end %>
  <% end %>

  <h1>Listing Expenses</h1>

  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th><%= sortable "number", "Invoice number" %></th>
      <th class="t_middle">Date</th>
      <th class="t_right"><%= sortable "value" %></th>
      <th class="t_middle"><%= sortable "supplier_id" %></th>
      <th class="t_middle">Description</th>
      <th><%= render 'search/search' %></th>
    </tr>
    </thead>

    <tbody>
    <% @international_expenses.each do |ie| %>
        <tr>
          <td><%= ie.number %></td>
          <td class="t_middle"><%= ie.date %></td>
          <td class="t_value"><%= number_to_currency(ie.value, :unit => ie.currency) %></td>
          <td class="t_middle"><%= ie.supplier.name %></td>
          <td class="t_middle"><%= ie.description %></td>
          <td class="btn-group btn-group-xs">
            <%= file_state(ie, 'Show') %>
            <%= link_to 'Edit', edit_international_expense_path(ie), class: 'btn btn-info' %>
            <%= link_to 'Destroy', ie, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= will_paginate @international_expenses, renderer: BootstrapPagination::Rails %>

  <div class="btn-group btn-group-xs">
    <%= link_to 'New Expense', new_international_expense_path, class: 'btn btn-primary' %>
  </div>
</div>